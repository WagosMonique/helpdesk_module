<odoo>
    <data>

        <record id="hr_timesheet_line_tree" model="ir.ui.view">
            <field name="name">account.analytic.line.list</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="attributes">
                    <attribute name="decoration-danger">break_time != False</attribute>
                </xpath>
                <xpath expr="//field[@name='unit_amount']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <field name="unit_amount" position="before">
                    <field name="start_time"/>
                    <field name="break_time"/>
                    <field name="end_time"/>
                    <button name="button_break" type="object" string=" Break" class="fa fa-pause btn-danger"/>
                    <button name="button_resume" type="object" string=" Resume" class="fa fa-play btn-success"/>
                    <field name="break_unit_amount" widget="timesheet_uom" sum="Total"/>
                </field>
            </field>
        </record>

    </data>
</odoo>